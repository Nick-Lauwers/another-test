<%= form_for(([@post, @post.responses.build]), :html => {:class => 'response-form'}) do |f| %>

  <!--<(perc)= render 'shared/error_messages', object: f.object %>-->
  
  <div class="row vertical-align response-header">
    
    <div class="col-xs-2">
      <div class="response-avatar">
        <%= link_to (image_tag current_user.avatar.url),
                    user_path(current_user) %>
      </div>
    </div>
    
    <div class="col-xs-10">
      
      <%= link_to current_user, class: "response-title-second" do %> 
        <%= current_user.name %>
      <% end %>
      
      <span class="response-stats">
        <%= Time.now.strftime("%D") %>
      </span>
    </div>
  </div>
  
  <div class="review-container">
    <%= f.text_area :comment,
                    rows: 3,
                    placeholder: "Post a response", 
                    class: "form-control review-comment-form-control-second" %>
                    
    <div class="review-post-container">
      <%= f.submit "Post my response", class: "review-post" %>
    </div>
  </div>
<% end %>