<% @test_drives.each do |test_drive| %>
  <li id="test_drive-<%= test_drive.id %>" class="list-item">
    <div class="row">
      <div class="col-md-2">
        <%= test_drive.date.try(:strftime, '%v') %>
      </div>
      <div class="col-md-6">
        <%= link_to vehicle_path(test_drive.vehicle) do %>
          <%= image_tag test_drive.vehicle.photos[0].image.url(:thumb)  if 
              test_drive.vehicle.photos.length > 0 %>
        <% end %>
      </div>
      <div class="col-md-2">
        <%= link_to user_path(test_drive.vehicle.user) do %>
          <!--<= image_tag gravatar_url(test_drive.vehicle.user), class: "img-circle gravatar-medium" %>-->
        <% end %>
      </div>
      <div class="col-md-2 right">
      </div>
    </div>
  </li>
<% end %>