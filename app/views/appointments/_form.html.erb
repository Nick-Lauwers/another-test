<%= form_for([@vehicle, @vehicle.appointments.new]) do |f| %>

  <div class="row appointment-content">

    <div class="col-xs-8">
      <div class="form-element-secondary">
        
        <%= f.text_field :date, 
            readonly: 'true', 
            placeholder: "Test Drive", 
            class: 'form-control form-control-secondary' %>
            
        <i class="fa fa-calendar-o fa-lg form-icon" 
           aria-hidden="true"></i>
           
        <i class="fa fa-caret-down fa-lg form-caret" 
           aria-hidden="true"></i>
      </div>
    
      <%= f.hidden_field :vehicle_id, value: @vehicle.id %>
    </div>
    
    <div class="col-xs-4">
      <%= f.submit "Book!", class: "btn btn-tertiary" %>
    </div>
  </div>
<% end %>

<script type="text/javascript">
  
  // datepicker
  var appointmentDate = $('#appointment_date');

  $(function() {
    appointmentDate.datepicker({
      dateFormat: 'dd-mm-yy'
    });
  });
</script>