<% if message.user_id == current_user.id %>

  <div class="row">
  
    <div class="col-md-10">
      <div class="message-container">
        
        <p class="message-comment">
          <%= message.content %>
        </p>
        
        <span class="message-date">
          <%= message.message_time %>
        </span>
      </div>
    </div>
    
    <div class="col-md-2">
      <div class="message-avatar message-avatar-right">
        <%= image_tag current_user.profile.avatar.url %>
      </div>
    </div>
  </div>

<% else %>
  
  <div class="row">
  
    <div class="col-md-2">
      <div class="message-avatar message-avatar-left">
        <%= image_tag @other.profile.avatar.url %>
      </div>
    </div>
    
    <div class="col-md-10">
      
      <div class="message-container">
        
        <p class="message-comment">
          <%= message.content %>
        </p>
        
        <span class="message-date">
          <%= message.message_time %>
        </span>
      </div>
    </div>
    
  </div>
  <% end %>

<script type="text/javascript">
  $(document).ready(function() {
    
    // image scaling
    var threadAvatar = $('.thread-avatar');
    
    threadAvatar.imagefill();
  })
</script>