<%= form_for(@blog) do |f| %>
      
  <%= render 'shared/error_messages', object: f.object %>

  <div class="post-pic">

    <i class="fa fa-camera-retro post-pic-icon fa-5x" 
       aria-hidden="true"></i>
     
    <%= image_tag @blog.cover_photo.url, class: "uploaded-photo" %>
  </div>

  <div class="upload-button-clubs">

    <div class="upload-button-content">
      Upload Photo
    </div>
    
    <%= f.file_field :cover_photo, class: "upload-hidden" %>
  </div>
          
  <div class="form-group form-group-primary">
    
    <%= f.label :title, "Add title" %>
    
    <%= f.text_field :title, 
                     class: "form-control form-control-primary" %>
      
    <%= f.label :content, "Add caption" %>
    
    <%= f.text_area :content, 
                    class: "form-control form-control-primary", 
                    rows: 5 %>
  </div>
          
  <%= f.submit "Post", class: "btn btn-add-content" %>
  
  <%= link_to "Cancel", 
              discussions_path,
              class: "btn btn-add-content-cancel" %>
<% end %>