<li id="blog-item-<%= blog.id %> blog-item" class="col-md-4">
  <%= link_to blog, target: "_blank" do %>
    
    <div class="blog-item-image",
         style="background-image: url('<%= blog.cover_photo.url() %>')">
    </div>
    
    <div class="blog-item-content">
      
      <h3 class="blog-item-title"><%= blog.title %></h3>
      
      <div class="row">
        
        <div class="col-md-2">
          <%= link_to user_path(blog.user) do %>
            <div class="purchase-hero-avatar avatar-general", 
                 style="background-image: url(
                         '<%= blog.user.avatar.url(:thumb) %>')">
            </div>
          <% end %>
        </div>
        
        <div class="col-md-10">
          <%= blog.user.full_name %>
        </div>
      </div>
    </div>
  <% end %>
</li>