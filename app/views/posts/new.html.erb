<% provide(:title, "New Post") %>

<header class="header-static-gray">
  <%= render 'layouts/header_secondary' %>
</header>

<%= render 'layouts/modal_search' %>

<%= render 'layouts/modal_menu' %>

<div class="new-post">
  
  <ol class="social-nav">
      
    <% if params[:club_id].nil? %>
    
      <li>
        
        <i class="fa fa-angle-left social-nav-separator-mobile visible-xs" 
           aria-hidden="true"></i>
        
        <%= link_to "Community Center", posts_path, class: "social-nav-link" %>
      </li>
      
    <% else %>
    
      <li class="hidden-xs">
        <%= link_to "Community Center", posts_path, class: "social-nav-link" %>
      </li>
      
      <li class="hidden-xs">
        
        <i class="fa fa-angle-right social-nav-separator" 
           aria-hidden="true"></i>
           
        <%= link_to "Car Clubs", clubs_path, class: "social-nav-link" %>
      </li>
      
      <li>
        
        <i class="fa fa-angle-right social-nav-separator hidden-xs" 
           aria-hidden="true"></i>
        
        <i class="fa fa-angle-left social-nav-separator-mobile visible-xs" 
           aria-hidden="true"></i>
           
        <%= link_to Club.find(params[:club_id]), class: "social-nav-link" do %>
          <%= Club.find(params[:club_id]).name %>
        <% end %>
      </li>
    <% end %>
      
    <li class="hidden-xs">
      
      <i class="fa fa-angle-right social-nav-separator" 
         aria-hidden="true"></i>
         
      <span class="social-nav-active">New Post</span>
    </li>
  </ol>
  
  <h1 class="new-post-title">Start A Conversation</h1>
  
  <%= render 'new_form' %>
</div>