<%= form_for(@post) do |f| %>
  
  <%= render 'shared/error_messages', object: f.object %>
  
  <div class="form-group form-group-primary">
    <%= f.label :title, "What do you want to talk about?" %>
    <%= f.text_field :title, class: "form-control form-control-primary" %>
  </div>
  
  <div class="form-group form-group-primary">
              
    <%= f.label :content, "Add details..." %>
    
    <%= f.text_area :content, 
                    class: "form-control form-control-primary", 
                    rows: 5 %>
  </div>

  <div class="row">
    
    <div class="col-md-3">
      <%= f.submit "Update", class: "btn btn-new-post" %>
      <%= link_to "Cancel", post_path, class: "btn btn-new-post-cancel" %>
    </div>
    
    <div class="col-md-9">
      <!--intentionally left blank-->
    </div>
  </div>
<% end %>