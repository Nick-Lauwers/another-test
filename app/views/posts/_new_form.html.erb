<%= form_for(@post) do |f| %>
  
  <%= render 'shared/error_messages', object: f.object %>
  
  <div class="form-group form-group-primary">
    <%= f.label :title, "What do you want to talk about?" %>
    <%= f.text_field :title, class: "form-control form-control-primary" %>
  </div>
  
  <div class="form-group form-group-primary">
              
    <%= f.label :content, "Add details..." %>
    
    <%= f.text_area :content, 
                    class: "form-control form-control-primary", 
                    rows: 5 %>
  </div>

  <%= f.hidden_field :likes,   value: 0 %>
  
  <%= f.hidden_field :club_id, value: params[:club_id] %>

  <div class="row">
    
    <div class="col-md-3">
      
      <%= f.submit "Post", class: "btn btn-new-post" %>
      
      <% if params[:club_id].nil? %>
        <%= link_to "Cancel", posts_path, class: "btn btn-new-post-cancel" %>
      <% else %>
        <%= link_to "Cancel", @club, class: "btn btn-new-post-cancel" %>
      <% end %>
    </div>
    
    <div class="col-md-9">
      <!--intentionally left blank-->
    </div>
  </div>
<% end %>