<% provide(:title, "Forgot Password") %>

<header class="header-normal">
  <%= render 'layouts/header_secondary' %>
</header>

<div class="content-container">
  <h1 class="content-title">Forgot your password?</h1>
  <p>Enter your email address below, and if you've already registered with
     Dealership.com we'll send you a link to create a new password</p>
  <div class="forgot-password-form">
    <%= form_for(:password_reset, url: password_resets_path) do |f| %>
      <%= f.email_field :email, :placeholder => "Email address", 
          class: 'form-control' %>
    
      <%= f.submit "Send Email", class: "btn-primary" %>
    <% end %>
  </div>  
</div>