<% provide(:title, "Inbox") %>

<header class="header-static-gray">
  <%= render 'layouts/header_secondary' %>
</header>

<%= render 'shared/hero_secondary' %>

<nav class="secondary-navbar">
  <div class="secondary-navbar-nav">
    <ul class="nav navbar-nav navbar-left">
      <li>
        <%= link_to "Inbox",       
            conversations_path, 
            class: "nav-active" %>
      </li>
      <li><%= link_to "Garage",      vehicles_path %></li>
      <li><%= link_to "Test Drives", test_drives_path %></li>
      <li>
        <%= link_to "Profile", 
            edit_profile_path(current_user.profile) %>
      </li>
      <li><%= link_to "Account",     edit_user_path(current_user) %></li>
    </ul>
  </div>
</nav>

<div class="conversations">
  <div class="conversations-content">
    <div class="row">
      
      <div class="col-md-4">
        <div class="conversations-instructions">
          
          <h2 class="conversations-instructions-title">
            Messages (<%= @conversations.count %>)
          </h2>
          
          <p class="conversations-instructions-info">
            When customers contact you or send you test drive requests, you will
            see their messages here.
          </p>
        </div>
      </div>
      
      <div class="col-md-8">
        <% if @conversations.any? %>
          <ul class="conversations-list">
            <%= render @conversations %>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
</div>