<div class="question-form">
  <%= form_for @question do |f| %>
  
    <!--<(perc)= render 'shared/error_messages', object: f.object %>-->

    <div class="avatar-and-online">
      
      <%= link_to user_path(@question.user) do %>
        <div class="question-form-avatar avatar-general", 
             style="background-image: url(
                     '<%= @question.user.avatar.url(:thumb) %>')">
        </div>
      <% end %>
      
      <% if @question.user.online? %>
        <div class="online online-sm-primary hidden-xs"></div>
      <% end %>
    </div>
    
    <div class="question-form-container">
  
      <%= f.text_field :content, 
                       placeholder: "Write your question here.", 
                       class: "form-control question-form-control" %>
                       
      <%= f.hidden_field :vehicle_id, value: @vehicle.id %>
      
      <div class="question-submit-container">
        <%= f.submit "Ask!", class: "question-submit" %>
      </div>
    </div>
  <% end %>
</div>