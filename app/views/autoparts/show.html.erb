<% provide(:title, @autopart.listing_name) %>

<header class="header-static-gray">
  <%= render 'layouts/header_secondary' %>
</header>

<%= render 'layouts/modal_search' %>

<%= render 'layouts/modal_menu' %>

<% if @autopart.sold_at.present? %>
  <div class="ribbon-autopart">SOLD</div>
<% end %>

<div class="autopart">
  <div class="autopart-content">
    <div class="row">
      
      <div class="col-md-7">
        <div class="row">
          
          <div class="col-md-3">
            
            <div class="autopart-thumbnail"
                 style="background-image: url(
                         '<%= @autopart.autopart_photos[0].image.url() if
                              @autopart.autopart_photos.length > 0 %>')"></div>
                              
            <div class="autopart-thumbnail"
                 style="background-image: url(
                         '<%= @autopart.autopart_photos[1].image.url() if
                              @autopart.autopart_photos.length > 1 %>')"></div>
                              
            <div class="autopart-thumbnail last"
                 style="background-image: url(
                         '<%= @autopart.autopart_photos[2].image.url() if
                              @autopart.autopart_photos.length > 2 %>')"></div>
          </div>
          
          <div class="col-md-9">
            <div class="autopart-image"
                 style="background-image: url(
                         '<%= @autopart.autopart_photos[0].image.url() if
                              @autopart.autopart_photos.length > 0 %>')"></div>
          </div>
        </div>
      </div>
      
      <div class="col-md-4 col-md-offset-1">
        
        <h1><%= @autopart.listing_name %></h1>
        
        <h3>$<%= @autopart.price %></h3>
        
        <div class="row vertical-align">
    
          <div class="col-md-2 avatar-and-online">
      
            <div class="post-response-avatar">
              <%= link_to (image_tag @autopart.user.avatar.url),
                          user_path(@autopart.user) %>
            </div>
            
            <% if @autopart.user.online? %>
              <div class="online online-md-quaternary hidden-xs"></div>
            <% end %>
          </div>
          
          <div class="col-md-10 col-xs-9">
            
            <%= link_to @autopart.user.full_name, 
                        @autopart.user, 
                        class: "post-response-title" %> 
              
            <span class="post-response-stats">
              
              <%= time_ago_in_words(@autopart.created_at).capitalize %> ago
              
            </span>
          </div>
        </div>
        
        <%= link_to favorite_autopart_path(@autopart), 
                    class: "vehicle-overview-link",
                    method: :put do %>
                    
          <i class="fa fa-heart-o" 
             aria-hidden="true"></i> 
               
          Add to Wish List
        <% end %>
        
        <span><%= @autopart.summary %></span>
        
        <span><%= @autopart.shipping_info %></span>
        
        <div class="vehicle-reviews">
          
          <span class="vehicle-reviews-title">Need Some Advice?</span>
          
          <p class="vehicle-reviews-info">
            Read <%= @autopart.user.first_name %>'s reviews!
          </p>
          
          <%= link_to user_path(@autopart.user, anchor: "profile-reviews"), 
                      class: "btn btn-secondary" do %>
          
            Reviews
            
            <i class="fa fa-arrow-right next-button-icon" 
               aria-hidden="true"></i> 
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>