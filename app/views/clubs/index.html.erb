<% provide(:title, "Car Clubs") %>

<header class="header-static-gray">
  <%= render 'layouts/header_secondary' %>
</header>

<%= render 'layouts/modal_search' %>

<%= render 'layouts/modal_menu' %>

<div class="clubs-social-nav">
  
  <ol class="social-nav">
    
    <li>
      
      <i class="fa fa-angle-left social-nav-separator-mobile visible-xs" 
         aria-hidden="true"></i>
      
      <%= link_to "Community Center", posts_path, class: "social-nav-link" %>
    </li>
    
    <li class="hidden-xs">
      
      <i class="fa fa-angle-right social-nav-separator" 
         aria-hidden="true"></i>
         
      <span class="social-nav-active">Car Clubs</span>
    </li>
  </ol>
</div>
  
<div class="clubs-overview-cover-photo" 
     style="background-image: url('https://s3.us-east-2.amazonaws.com/online-dealership-assets/static-assets/car-club.jpg')">
  <h1 class="cover-photo-title">Car Clubs</h1>
</div>

<div class="clubs-overview">
  <div class="row">
    
    <div class="col-md-7">
      
      <div class="clubs-overview-detail">
      
        <h2 class="clubs-overview-title">Connect Locally</h2>
        
        <p class="clubs-overview-info">
          Car Clubs are a place for vehicle enthusiasts to connect online with 
          members of their local club, and to strengthen the passion for 
          motoring within their communities.
        </p>
        
        <div class="visible-xs">
          <%= render 'search_form' %>
        </div>
      </div>
      
      <h2 class="clubs-overview-list-title">Most Active Clubs</h2>
      
      <ol class="clubs-overview-list">
        <%= render @clubs %>
      </ol>
      
      <%= link_to "View All Car Clubs",
                  search_clubs_path, 
                  class: "btn btn-all-clubs" %>
    </div>
    
    <div class="col-md-4 col-md-offset-1">
      
      <div class="hidden-xs">
        <%= render 'search_form' %>
      </div>

      <div class="forum-intro">
        
        <span class="forum-intro-title">Don't See Your Club?</span>
        
        <p class="forum-intro-info">
          Interested in starting a car club in your own community?
        </p>
        
        <%= link_to "Reach Out to Us", 
                    new_club_path, 
                    class: "btn btn-green" %>
      </div>
    </div>
  </div>
</div>