<% provide(:title, @club.name) %>

<header class="header-static-gray">
  <%= render 'layouts/header_secondary' %>
</header>

<%= render 'layouts/modal_search' %>

<%= render 'layouts/modal_menu' %>

<div class="edit-post">
  
  <div class="forum-nav">
    <%= link_to "Community Center", posts_path, class: "forum-nav-link" %>
    <%= link_to "Car Clubs", posts_path, class: "forum-nav-link" %>
    <%= link_to @club.name, clubs_path, class: "forum-nav-link" %>
  </div>
  
  <div class="row">
    <div class="col-md-7">
      <div class="club-cover-photo" 
         style="background-image: url('https://s3.us-east-2.amazonaws.com/online-dealership-assets/static-assets/car-club.jpg')">
        <h1 class="cover-photo-title">Car Clubs</h1>
      </div>
    </div>
    
    <div class="col-md-4 col-md-offset-1">
      <%= @club.name %>
      <%= @club.description %>
      <%= link_to "Update", edit_club_path %>
      Start a conversation
      Join Group
    </div>
  </div>
</div>