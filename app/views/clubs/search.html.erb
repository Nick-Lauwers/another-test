<% provide(:title, params[:city]) %>

<header class="header-static-gray">
  <%= render 'layouts/header_secondary' %>
</header>

<%= render 'layouts/modal_search' %>

<%= render 'layouts/modal_menu' %>

<div class="clubs-social-nav">  
  <ol class="social-nav">
    
    <li class="hidden-xs">
      <%= link_to "Community Center", posts_path, class: "social-nav-link" %>
    </li>
    
    <li>
      
      <i class="fa fa-angle-left social-nav-separator-mobile visible-xs" 
         aria-hidden="true"></i>
      
      <i class="fa fa-angle-right social-nav-separator hidden-xs" 
         aria-hidden="true"></i>
         
      <%= link_to "Car Clubs", clubs_path, class: "social-nav-link" %>
    </li>
    
    <li class="hidden-xs">
      
      <i class="fa fa-angle-right social-nav-separator" 
         aria-hidden="true"></i>
         
      <span class="social-nav-active">Search</span>
    </li>
  </ol>
</div>
  
<div class="clubs-search-cover-photo" 
     style="background-image: url('https://s3.us-east-2.amazonaws.com/online-dealership-assets/static-assets/car-club.jpg')">
  <h1 class="cover-photo-title">Car Clubs</h1>
</div>

<div class="clubs-search">  
  <div class="row">
    
    <div class="col-md-7">
      
      <div class="clubs-search-detail">
        
        <div class="visible-xs">
          <%= render 'search_form' %>
        </div>
      
        <h2 class="clubs-search-title">
          <% if params[:city].present? %>
            Results for '<%= params[:city] %>'
          <% else %>
            All Car Clubs
          <% end %>
        </h2>
      </div>
      
      <ol class="clubs-search-list-desktop hidden-xs">
        <%= render partial:    "searched_club", 
                   collection: @clubs,
                   as:         :club %>
      </ol>
      
      <ol class="clubs-search-list-mobile visible-xs">
        <%= render @clubs %>
      </ol>
        
      <!--<(perc)= will_paginate @clubs, -->
      <!--    previous_label: -->
      <!--      '<i class="fa fa-arrow-left" aria-hidden="true"></i>', -->
      <!--    next_label: -->
      <!--      '<i class="fa fa-arrow-right" aria-hidden="true"></i>',-->
      <!--    inner_window: 1, -->
      <!--    outer_window: 0 %>-->
    </div>
    
    <div class="col-md-4 col-md-offset-1">
      
      <div class="hidden-xs">
        <%= render 'search_form' %>
      </div>

      <div class="forum-intro">
        
        <span class="forum-intro-title">Don't See Your Club?</span>
        
        <p class="forum-intro-info">
          Interested in starting a car club in your own community?
        </p>
        
        <%= link_to "Reach Out to Us", 
                    new_club_path, 
                    class: "btn btn-green" %>
      </div>
    </div>
  </div>
</div>