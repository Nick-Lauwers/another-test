<% provide(:title, "Garage") %>

<header class="header-static-gray">
  <%= render 'layouts/header_secondary' %>
</header>

<%= render 'shared/hero_secondary' %>

<nav class="secondary-navbar">
  <div class="secondary-navbar-nav">
    <ul class="nav navbar-nav navbar-left">
      <li><%= link_to "Inbox", conversations_path %></li>
      <li>
        <%= link_to "Garage", 
            vehicles_path,
            class: "nav-active" %>
      </li>
      <li><%= link_to "Test Drives", test_drives_path %></li>
      <li><%= link_to "Profile",     profile_path %></li>
      <li><%= link_to "Account",     edit_user_path(current_user) %></li>
    </ul>
  </div>
</nav>

<div class="your-listings">
  <div class="your-listings-content">
    <div class="row">
    
      <div class="col-md-4"> 
        <div class="your-listings-instructions">
          
          <h2 class="your-listings-instructions-title">
            Your Listings (<%= @vehicles.count %>)
          </h2>
          
          <p class="your-listings-instructions-info">
            Your listings will be displayed here. A listing will not be 
            displayed if the application is processing.
          </p>
        </div>
      </div>
      
      <div class="col-md-8">
        <% if @vehicles.any? %>
          <ul class="your-listings-list">
            <%= render @vehicles %>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
</div>