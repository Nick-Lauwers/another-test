<%= form_for([@club, @club.club_products.build], 
             html: { multipart: true }) do |f| %>

  <%= render 'shared/error_messages', object: f.object %>

  <div class="basics">
    <div class="row">
      
      <div class="col-md-4">
        
        <h2 class="basics-title">The Basics</h2>
        
        <p class="basics-info">
          Start with the basics.
        </p>
      </div>
      
      <div class="col-md-8">
        
        <div class="row">
          
          <div class="col-md-6 form-group">

            <%= f.label :price %>
            
            <div class= "input-group">
              
              <div class="input-group-addon">$</div>
              
              <%= f.text_field :price, 
                               placeholder: "Eg. 400", 
                               class: "form-control form-control-primary" %>
            </div>
          </div>

          <div class="col-md-6">
            <!--intentionally left empty-->
          </div>
        </div>
        
        <div class="form-group">
          
          <%= f.label :name, "Listing Name" %>
          
          <%= f.text_field :name, 
                           placeholder: "Eg. Dodge Dakota Truck Cap", 
                           class: "form-control form-control-primary" %>
        </div>
        
        <div class="form-group">
          
          <%= f.label :description %>
          
          <%= f.text_area :description, 
                          rows: 3,
                          placeholder: "Eg. Features tinted windows and full-length side doors.", 
                          class: "form-control form-control-primary" %>
        </div>
        
        <div class="form-group">
          
          <%= f.label :shipping_info, "Shipping Details" %>
          
          <%= f.text_area :shipping_info,
                          rows: 3,
                          placeholder: "Enter shipping details if part can be mailed (optional).", 
                          class: "form-control form-control-primary" %>
        </div>
        
        <div id="autopart-photos">
          <%= render 'autopart_photos/list' %>
        </div>
        
        <span class="btn btn-green btn-file">
              
              Select Photos
              
              <%= file_field_tag "images[]", 
                               type: :file, 
                               multiple: true %>
            </span>
      </div>
    </div>
  </div>
  
  <div class="row submit-vehicle">
    
    <div class="col-md-4">
      <!--intentionally left blank-->
    </div>
    
    <div class="col-md-8">
      <%= f.submit "Submit Details", class: "submit btn btn-secondary" %>
    </div>
  </div>
<% end %>