<% provide(:title, 'Profile') %>

<header class="header-static-gray">
  <%= render 'layouts/header_secondary' %>
</header>

<%= render 'layouts/hero_backend' %>

<nav class="secondary-navbar">
  <div class="secondary-navbar-nav">
    <ul class="nav navbar-nav navbar-left">
      
      <li><%= link_to "Dashboard", dashboard_path %></li>
      
      <li><%= link_to "Inbox", conversations_path %></li>
      
      <li><%= link_to "Garage", vehicles_path %></li>
      
      <li><%= link_to "Test Drives", test_drives_path %></li>
      
      <li>
        <%= link_to "Profile",     
                    edit_user_path(current_user), 
                    class: "nav-active" %>
      </li>
    </ul>
  </div>
</nav>

<div class="backend">
  <div class="backend-content">
    <div class="row">
    
      <div class="col-xs-4 sidenav">

        <h2 class="sidenav-title">
          Profile
        </h2>
        
        <ul class="sidenav-list">
          
          <li>
            <%= link_to "Edit Profile", edit_user_path(current_user) %>
          </li>
          
          <li>
            <%= link_to user_reviews_path, class: "sidenav-active" do %> 
              Reviews (<%= @reviews.count %>)
            <% end %>
          </li>
        </ul>
      </div>
      
      <div class="col-xs-8">
        <% if @reviews.exists? %>
          <ol class="backend-list">
            <%= render partial:    "backend_review", 
                       collection: @reviews, 
                       as:         :review %>
          </ol>
          
        <% else %>
          <div class="empty-list">
          
            <i class="fa fa-balance-scale fa-4x empty-list-icon" 
               aria-hidden="true"></i>
               
            <p class="empty-list-info">
              No reviews, yet.
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>