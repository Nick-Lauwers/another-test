<div class="header-profile">
  <div class="header-profile-content">
    <div class="row vertical-align">
      
      <div class="col-xs-8 vertical-align">
        
        <div class="header-profile-avatar">
          <%= image_tag @user.avatar.url %>
        </div>
        
        <div class="header-profile-info">
          <span class="header-profile-username"><%= @user.name %></span>
        </div>
      </div>
      
      <div class="col-xs-4">

        <% if logged_in? %>
          <%= form_for @conversation, 
                       url: conversations_path(@conversation), 
                       method: :post do |f| %>
                       
            <%= f.hidden_field :sender_id,    value: current_user.id %>
            
            <%= f.hidden_field :recipient_id, value: @user.id %>
            
            <%= f.submit "Contact Seller", 
                         class: "btn-header-profile" %>
          <% end %>
                          
        <% else %>
          <%= button_to "Contact Seller", 
                        login_path, 
                        class: "btn-header-profile", 
                        method: :get %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    
    $(window).on('scroll', function() {
        
        // fixed header
          var fixedHeader = $('.header-fixed-hidden');
          var scrolltop   = $(this).scrollTop();
          
          if(scrolltop >= 655) {
            var headerProfileAvatar = $('.header-profile-avatar');

            headerProfileAvatar.imagefill();
            fixedHeader.fadeIn(250);
          }
          else if(scrolltop <= 650) {
            fixedHeader.fadeOut(250);
          }
      });
      
      
  });
</script>