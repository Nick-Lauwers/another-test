<footer class="footer">
  <div class="footer-text">
    <div class="row">
      <div class="col-md-3">
        <h3 class="footer-logo">Dealership.com</h3>
      </div>
      <div class="col-md-2">
        <h3 class="footer-subtitle">Company</h3>
        <nav>
          <ul>
            <li><%= link_to "About",    about_path %></li>
            <li><%= link_to "Contact",  contact_path %></li>
            <li><%= link_to "Careers",  '#' %></li>
            <li><%= link_to "Partners", '#' %></li>
          </ul>
        </nav>
      </div>
      <div class="col-md-2">
        <h3 class="footer-subtitle">Discover</h3>
        <nav>
          <ul>
            <li><%= link_to "Trust", '#' %></li>
          </ul>
        </nav>
      </div>
      <div class="col-md-5">
        <h3 class="footer-subtitle">Sign up to our newsletter:</h3>
        <div class="input-group">
          <input  type="text" 
                  class="form-control" 
                  maxlength="50" 
                  placeholder="Email Address"/>
          <div class="input-group-btn">
            <button type="submit" class="btn btn-primary btn-inline">
              Subscribe 
              <!--<span class="glyphicon glyphicon-arrow-right"></span>-->
            </button>
          </div>
        </div>
        <ul class="social-media">
          <li>
            <%= link_to '#' do %>
              <i class="fa fa-facebook fa-2x"></i>
            <% end %>
          </li>
          <li>
            <%= link_to '#' do %>
              <i class="fa fa-twitter fa-2x"></i>
            <% end %>
          </li>
          <li>
            <%= link_to '#' do %>
              <i class="fa fa-linkedin fa-2x"></i>
            <% end %>
          </li>
          <li>
            <%= link_to '#' do %>
              <i class="fa fa-instagram fa-2x"></i>
            <% end %>
          </li>
        </div>
      </div>
    </div>
  </div>
</footer>