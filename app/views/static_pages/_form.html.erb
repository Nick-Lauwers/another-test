<%= form_for @enquiry, :html => { multipart: true }  do |f| %>
  
  <div class="row">
    
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, 
            placeholder: "Name", 
            class: "form-control" %>
      </div>
    </div>
    
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :email, "Email Address" %>
        <%= f.text_field :email, 
            placeholder: "Email address", 
            class: "form-control" %>
      </div>
    </div>
  </div>
  
  <div class="row">
    
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :phone_number, "Phone Number" %>
        <%= f.text_field :phone_number, 
            placeholder: "Phone number (optional)", 
            class: "form-control" %>
      </div>
    </div>
    
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :category, "Reason" %>
        <div class="form-element">
          <%= f.select :category, 
              ["List your vehicle", "Join one of our events", 
               "Need help purchasing", "Other"],
              prompt: "How can we help?",
              class: "form-control" %>
          <i class="fa fa-info-circle fa-lg form-icon" 
                   aria-hidden="true"></i>
          <i class="fa fa-caret-down fa-lg form-caret" 
             aria-hidden="true"></i>
        </div>
      </div>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :content, "Question or Message" %>
    <%= f.text_area :content, 
        rows: 2,
        placeholder: "Question or message", 
        class: "form-control" %>
  </div>
  
  <%= f.submit "Send Message", class: "submit btn btn-primary" %>
  
<% end %>