<% if test_drive.date.future? %>

  <li id="dashboard-item-<%= test_drive.id %>" 
      class="col-xs-4 dashboard-item">
    <%= link_to conversation_messages_path(test_drive.conversation) do %>
  
      <div class="dashboard-item-content">
        
        <div class="dashboard-item-image", 
             style="background-image: url(
                     '<%= test_drive.buyer.avatar.url() %>')">
          <div class="dashboard-item-message">
            <i class="fa fa-lg fa-envelope-o dashboard-item-icon" 
               aria-hidden="true"></i>
          </div>
        </div>
        
        <div class="dashboard-item-detail">
          
          <span class="dashboard-item-countdown">
            In <%= time_ago_in_words(test_drive.date).titleize %>
          </span>
          
          <span class="dashboard-item-date">
            <%= test_drive.date.strftime("%A, %d %b (%-l:%M%p)") %>
          </span>
          
          <%= link_to test_drive.buyer.name,
                      test_drive.buyer,
                      class: "dashboard-item-link" %> Â·
          
          <%= link_to test_drive.vehicle.listing_name,
                      test_drive.vehicle,
                      class: "dashboard-item-link" %>
        </div>
        
        <div class="dashboard-item-status">
          <span class="dashboard-item-status-content">
            <%= test_drive.status.capitalize %>
          </span>
        </div>
      </div>
    <% end %>
  </li>    
<% end %>