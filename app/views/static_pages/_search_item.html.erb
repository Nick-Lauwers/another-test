<% @vehicles.each do |vehicle| %>
  <li id="vehicle-<%= vehicle.id %>" class="search-item">
    <div class="row search-item-vehicle">
      
      <div class="col-md-4 search-carousel-container">
        
        <%= link_to vehicle do %>
          <div id="search-carousel-<%= vehicle.id %>" 
               class="carousel search-carousel" 
               data-interval="false">
            <div class="carousel-inner">
              
              <div class="item active">
                <img src="<%= vehicle.photos[0].image.url() if 
                              vehicle.photos.length > 0 %>">
              </div>
              
              <div class="item">
                <img src="<%= vehicle.photos[1].image.url() if 
                              vehicle.photos.length > 1 %>">
              </div>
          
              <div class="item">
                <img src="<%= vehicle.photos[2].image.url() if 
                              vehicle.photos.length > 2 %>">
              </div>
          
              <div class="item">
                <img src="<%= vehicle.photos[3].image.url() if 
                              vehicle.photos.length > 3 %>">
              </div>
              
              <div class="item">
                <img src="<%= vehicle.photos[4].image.url() if 
                              vehicle.photos.length > 0 %>">
              </div>
              
              <div class="item">
                <img src="<%= vehicle.photos[5].image.url() if 
                              vehicle.photos.length > 5 %>">
              </div>
              
              <div class="item">
                <img src="<%= vehicle.photos[6].image.url() if 
                              vehicle.photos.length > 6 %>">
              </div>
              
              <div class="item">
                <img src="<%= vehicle.photos[7].image.url() if 
                              vehicle.photos.length > 0 %>">
              </div>
            </div>
          </div>
        <% end %>
        
        <a href="#search-carousel-<%= vehicle.id %>" data-slide="prev">
          <i class="fa fa-chevron-left fa-2x btn-search-carousel" 
             aria-hidden="true"></i>
        </a>
        
        <a href="#search-carousel-<%= vehicle.id %>" data-slide="next">
          <i class="fa fa-chevron-right fa-2x btn-search-carousel" 
             aria-hidden="true"></i>
        </a>
      </div>
      
      <div class="col-md-6 search-summary">
        
        <%= link_to vehicle, class: "search-summary-content" do %>
          <span class="search-detail-title"><%= vehicle.listing_name %></span>
          <span class="search-detail-info">
            <%= vehicle.user.name %> Â· <span class="average-rating"></span>
          </span>
          <span class="search-detail-info vehicle-description">
            <%= vehicle.summary %>
          </span>
        <% end %>
        
        <%= link_to '#' do %>
          <span class="search-detail-link">
            <i class="fa fa-heart" aria-hidden="true"></i>Add to Wish List
          </span>
        <% end %>
      </div>
      
      <div class="col-md-2 search-price">
        <%= link_to vehicle, class: "search-price-content" do %>
          <span class="search-detail-title">$<%= vehicle.price %></span>
          <span class="search-detail-discount">Discounted!</span>
          <div class="btn btn-secondary btn-search-detail">
            <span class="btn-text">View</span>
          </div>
        <% end %>
      </div>
    </div>
    
    <div class="row search-item-deal">
      <%= link_to vehicle, class: "search-deal-content" do %>
        <i class="fa fa-shopping-basket deal-detail-icon" aria-hidden="true"></i>
        <span class="deal-detail-title">1 Additional Product</span> 
        <span class="deal-detail-info">Spoiler at reduced cost</span> 
        <!--<span class="search-detail-info">From $261</span>-->
        <!--<span class="search-detail-info">From $<= vehicle.price %></span>-->
      <% end %>
    </div>
  </li>
  
  <script type="text/javascript">
    $(document).ready(function() {
      $('.average-rating').raty({
        path: '/assets',
        readOnly: true,
        score: <%= vehicle.average_rating %>
      });
    });
  </script>
<% end %>





