<li id="customer-item-<%= customer.id %>" class="customer-item">
  
  <%= link_to conversation_messages_path(customer.conversation) do %>
    <table class="customer-item-content">
      <tr>
        
        <td class="avatar-and-online">
          
          <div class="customer-avatar">
            <%= image_tag(customer.buyer.avatar.url) %>
          </div>
        
          <% if customer.buyer.online? %>
            <div class="online online-md-primary"></div>
          <% end %>
        </td>
        
        <td>
          <div class="customer-detail">
            
            <span class="customer-name"><%= customer.buyer.name %></span>
                  
            <span class="customer-listing">
              <%= customer.vehicle.listing_name %>
            </span>
          </div>
        </td>
        
        <td>
          <p class="customer-address"><%= customer.vehicle.address %></p>
        </td>
        
        <td>
          <div class="customer-contact-container">
            
            <span class="contact-date">
              In <%= time_ago_in_words(customer.date).titleize %> 
              (<%= customer.date.strftime("%D") %>)
            </span>
            
            <span class="contact-status <%= customer.status %>">
              <%= customer.status.capitalize %>
            </span>
          </div>
        </td>
      </tr>
    </table>
  <% end %>
</li>
