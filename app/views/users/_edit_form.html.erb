<%= form_for @user do |f| %>

  <%= render 'shared/error_messages', object: f.object %>
  
  <div class="update-panel">
    <div class="panel-header">
      <span class="panel-title">Required</span>
    </div>
    
    <div class="panel-content credentials">
      <div class="row form-group form-group-horizontal">
        
        <div class="col-xs-3">
          <%= f.label :name %>
        </div>
        
        <div class="col-xs-9">
          <%= f.text_field :name, 
            placeholder: @user.name, 
            class: 'form-control form-control-primary' %>
        </div>
      </div>
      
      <div class="row form-group form-group-horizontal">
        
        <div class="col-xs-3">
          <%= f.label :email %>
        </div>
        
        <div class="col-xs-9">
          <%= f.text_field :email, 
            placeholder: @user.name, 
            class: 'form-control form-control-primary' %>
        </div>
      </div>
      
      <div class="row form-group form-group-horizontal">
        
        <div class="col-xs-3">
          <%= f.label :password %>
        </div>
        
        <div class="col-xs-9">
          <%= f.text_field :password, 
            placeholder: "Password", 
            class: 'form-control form-control-primary' %>
        </div>
      </div>
      
      <div class="row form-group form-group-horizontal">
        
        <div class="col-xs-3">
          <%= f.label :password_confirmation, "Confirmation" %>
        </div>
        
        <div class="col-xs-9">
          <%= f.text_field :password_confirmation,
            placeholder: "Confirmation", 
            class: 'form-control form-control-primary' %>
        </div>
      </div>
      
      <div class="checkbox-inline">
        <%= f.check_box :is_subscribed, class: "checkbox" %>
        <%= f.label :is_subscribed, 
            "Tick here if you would like to receive our email newsletter which 
            contains more information about our services, offers, or promotions.",
            class: "checkbox-label" %>
      </div>
    </div>
  </div>

  <%= f.submit "Save Changes", class: "btn btn-primary" %>      

<% end %>