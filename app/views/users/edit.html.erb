<% provide(:title, 'Profile') %>

<header class="header-static-gray">
  <%= render 'layouts/header_secondary' %>
</header>

<%= render 'layouts/modal_search' %>

<%= render 'layouts/modal_menu' %>

<%= render 'layouts/hero_backend' %>

<nav class="secondary-navbar hidden-xs">
  <div class="secondary-navbar-nav">
    <ul class="nav navbar-nav navbar-left">
      <li><%= link_to "Dashboard",      dashboard_path %></li>
      <li><%= link_to "Inbox",          conversations_path %></li>
      <li><%= link_to "Your Garage",    vehicles_path %></li>
      <li><%= link_to "Showroom",       test_drives_path %></li>
      <li>
        <%= link_to "Profile", 
                    edit_user_path(current_user), 
                    class: "nav-active" %>
      </li>
    </ul>
  </div>
</nav>

<nav class="dropdown dropdown-backend visible-xs-block">
  
  <a href='#' class="dropdown-toggle" data-toggle="dropdown">
    Profile <b class="caret"></b>
  </a>
  
  <ul class="dropdown-menu">
    <li><%= link_to "Dashboard",      dashboard_path %></li>
    <li><%= link_to "Inbox",          conversations_path %></li>
    <li><%= link_to "Your Garage",    vehicles_path %></li>
    <li><%= link_to "Showroom",       test_drives_path %></li>
    <li>
      <%= link_to "Profile", 
                  edit_user_path(current_user), 
                  class: "dropdown-active" %>
    </li>
  </ul>
</nav>

<div class="backend">
  <div class="backend-content">
    <div class="row">
    
      <div class="col-md-4 sidenav">

        <h2 class="sidenav-title">
          Profile
        </h2>
        
        <ul class="sidenav-list">
          
          <li>
            <%= link_to "Edit Profile", 
                        edit_user_path, 
                        class: "sidenav-active" %>
          </li>
          
          <li>
            <%= link_to user_reviews_path(current_user) do %>
              Reviews (<%= Review.where(reviewed_id: current_user.id).count %>)
            <% end %>
          </li>
        </ul>
        
        <!--<= link_to 'View Profile', -->
        <!--            user_path, -->
        <!--            class: "btn btn-tertiary btn-backend-profile" %>-->
      </div>
      
      <div class="col-md-8">
        
        <div class="profile-preview-button">
          <%= link_to user_path, 
                      class: "btn-profile-preview" do %>
                        
            <i class="fa fa-user-circle-o fa-lg profile-preview-icon" 
               aria-hidden="true"></i>
            
            Profile Preview
          <% end %>
        </div>

        <div class="account-form">
          <%= render 'edit_form' %>
        </div>
      </div>
    </div>
  </div>
</div>